<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IMS_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:IMS_Mobile.Controls"
    xmlns:views="clr-namespace:IMS_Mobile.MVVM.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="Contacts" Icon="contact.png">
            <ShellContent ContentTemplate="{DataTemplate views:ContactsPage}" Route="ContactsPage" />
        </Tab>
        <Tab Title="Inventory" Icon="products.png">
            <ShellContent ContentTemplate="{DataTemplate views:InventoryPage}" Route="InventoryPage" />
        </Tab>
        <Tab Title="Reports" Icon="reports.png">
            <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}" Route="ReportsPage" />
        </Tab>
    </TabBar>
    <Shell.TabBarForegroundColor>
        <OnPlatform x:TypeArguments="Color">
            <On Platform="iOS, Android" Value="#72fcb9" />

        </OnPlatform>
    </Shell.TabBarForegroundColor>
    <Shell.TabBarTitleColor>
        <Color>#72fcb9</Color>
    </Shell.TabBarTitleColor>


</Shell>