<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="IMS_Mobile.Popups.EditContactPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModel="clr-namespace:IMS_Mobile.MVVM.ViewModels"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="ViewModel:InventoryVM"
    Background="White"
    CanBeDismissedByTappingOutsideOfPopup="False"
    HeightRequest="650">



    <ScrollView VerticalScrollBarVisibility="Never">
        <Grid RowDefinitions="Auto,Auto,*">
            <!--  Header  -->
            <Grid
                Grid.Row="0"
                Margin="0,0,0,20"
                ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label
                        FontFamily="poppinbold"
                        FontSize="22"
                        Text="Edit Contact"
                        TextColor="#1A1A1A" />
                    <Label
                        FontFamily="poppinregular"
                        FontSize="14"
                        Text="Edit contact details below"
                        TextColor="#666666" />
                </VerticalStackLayout>
                <Label
                    Grid.Column="1"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="âœ•"
                    TextColor="#999999"
                    VerticalOptions="Start">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <!--  Form Content  -->
            <VerticalStackLayout Grid.Row="1" Spacing="16">

                <!--  Contact Name  -->
                <inputLayout:SfTextInputLayout
                    ContainerType="Outlined"
                    HelperText=""
                    Hint="Full Name"
                    OutlineCornerRadius="12"
                    Stroke="LightGreen">
                    <Entry
                        x:Name="NameEntry"
                        FontFamily="poppinregular"
                        FontSize="16"
                        Placeholder="Enter contact name"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </inputLayout:SfTextInputLayout>

                <!--  Phone Number  -->
                <inputLayout:SfTextInputLayout
                    ContainerType="Outlined"
                    Hint="Phone Number"
                    OutlineCornerRadius="12"
                    Stroke="LightGreen">
                    <Entry
                        x:Name="PhoneNumberEntry"
                        FontFamily="poppinregular"
                        FontSize="16"
                        Keyboard="Telephone"
                        Placeholder="Enter phone number"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </inputLayout:SfTextInputLayout>

                <!--  Credit Score  -->
                <inputLayout:SfTextInputLayout
                    ContainerType="Outlined"
                    Hint="Email"
                    OutlineCornerRadius="12"
                    Stroke="LightGreen">
                    <Entry
                        x:Name="EmailEntry"
                        FontFamily="poppinregular"
                        FontSize="16"
                        Placeholder="Enter Email"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </inputLayout:SfTextInputLayout>

                <!--  Total Purchases  -->
                <inputLayout:SfTextInputLayout
                    ContainerType="Outlined"
                    Hint="Address"
                    OutlineCornerRadius="12"
                    Stroke="LightGreen">
                    <Entry
                        x:Name="AddressEntry"
                        FontFamily="poppinregular"
                        FontSize="16"
                        Placeholder="Enter Address"
                        TextColor="#333333"
                        VerticalOptions="Center" />
                </inputLayout:SfTextInputLayout>

            </VerticalStackLayout>

            <!--  Action Buttons  -->
            <Grid
                Grid.Row="2"
                Margin="0,24,0,0"
                ColumnDefinitions="*,*"
                ColumnSpacing="12"
                VerticalOptions="End">

                <!--  Cancel Button  -->
                <Button
                    Grid.Column="0"
                    BackgroundColor="#F5F5F5"
                    Clicked="Button_Clicked"
                    CornerRadius="5"
                    FontFamily="poppinsemibold"
                    FontSize="15"
                    HeightRequest="52"
                    Text="Cancel"
                    TextColor="#666666" />

                <!--  Add Contact Button  -->
                <Button
                    Grid.Column="1"
                    BackgroundColor="LightGreen"
                    Clicked="ConfirmEdit"
                    CornerRadius="5"
                    FontFamily="poppinsemibold"
                    FontSize="15"
                    HeightRequest="52"
                    Text="Edit Contact"
                    TextColor="White" />
            </Grid>

        </Grid>
    </ScrollView>

</toolkit:Popup>