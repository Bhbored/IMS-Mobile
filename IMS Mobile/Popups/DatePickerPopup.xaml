<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="IMS_Mobile.Popups.DatePickerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="White"
    CanBeDismissedByTappingOutsideOfPopup="True">



    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="20">

        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label
                FontFamily="poppinbold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Filter by Date"
                TextColor="Black" />
            <Label
                FontSize="14"
                HorizontalOptions="Center"
                Text="Select date range to filter transactions"
                TextColor="Gray" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="12">
            <Label
                FontFamily="poppinbold"
                FontSize="16"
                Text="Start Date"
                TextColor="Black" />
            <DatePicker
                x:Name="StartDatePicker"
                Date="{Binding StartDate}"
                FontSize="16"
                Format="MMM dd, yyyy" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="2" Spacing="12">
            <Label
                FontFamily="poppinbold"
                FontSize="16"
                Text="End Date"
                TextColor="Black" />
            <DatePicker
                x:Name="EndDatePicker"
                Date="{Binding EndDate}"
                FontSize="16"
                Format="MMM dd, yyyy" />
        </VerticalStackLayout>

        <Border
            Grid.Row="3"
            Padding="12"
            BackgroundColor="#F0F0F0"
            StrokeShape="RoundRectangle 8"
            StrokeThickness="0">
            <Label
                x:Name="SummaryLabel"
                FontSize="14"
                HorizontalOptions="Center"
                Text="{Binding FilterSummary}"
                TextColor="Black" />
        </Border>

        <HorizontalStackLayout
            Grid.Row="4"
            HorizontalOptions="Center"
            Spacing="12">
            <Button
                x:Name="CancelButton"
                Padding="24,12"
                BackgroundColor="Transparent"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnCancelClicked"
                CornerRadius="8"
                FontSize="14"
                Text="Cancel"
                TextColor="Gray" />

            <Button
                x:Name="ApplyButton"
                Padding="24,12"
                BackgroundColor="#007AFF"
                Clicked="OnApplyClicked"
                CornerRadius="8"
                FontSize="14"
                Text="Apply Filter"
                TextColor="White" />
        </HorizontalStackLayout>
    </Grid>

</toolkit:Popup>