<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Typography Styles  -->
    <Style Class="TitleStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinbold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,20,0,0" />
    </Style>

    <Style Class="SectionTitleStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinbold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Margin" Value="20,20,20,10" />
    </Style>

    <Style Class="RegularTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinregular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="Black" />
    </Style>

    <Style Class="SmallTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinregular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="#666666" />
    </Style>

    <!--  Card Styles  -->
    <Style Class="BalanceCardStyle" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#4CAF50" />
                    <GradientStop Offset="1" Color="#E0E0E0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="16" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="20,10,20,20" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="#40000000"
                    Radius="8"
                    Offset="0,4" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style Class="TransactionCardStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="Stroke" Value="#E0E0E0" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="20,5,20,5" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="#20000000"
                    Radius="4"
                    Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Modern Gradient Card Styles  -->
    <Style Class="SalesCardStyle" TargetType="Border">
