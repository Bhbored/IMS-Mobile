    <!--  Button Styles  -->
    <Style Class="FilterButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="poppinregular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="Background" Value="White" />
        <Setter Property="TextColor" Value="#666666" />
        <Setter Property="BorderColor" Value="#E0E0E0" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style Class="ActiveFilterButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="poppinregular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="Background" Value="#F0F0F0" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="BorderColor" Value="#CCCCCC" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!--  Icon Styles  -->
    <Style Class="TransactionIconStyle" TargetType="Border">
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Navigation Styles  -->
    <Style Class="NavigationItemStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="6,10" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style Class="ActiveNavigationItemStyle" TargetType="Border">
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="Stroke" Value="#CCCCCC" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="6,10" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style Class="NavigationIconStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style Class="NavigationTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinregular" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="#666666" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style Class="ActiveNavigationTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="poppinbold" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="#666666" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

</ResourceDictionary>