<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IMS_Mobile.MVVM.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Controls="clr-namespace:IMS_Mobile.Controls"
    xmlns:Converters="clr-namespace:IMS_Mobile.Converters"
    xmlns:Models="clr-namespace:IMS_Mobile.MVVM.Models"
    xmlns:ViewModels="clr-namespace:IMS_Mobile.MVVM.ViewModels"
    x:DataType="ViewModels:HomeVM"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Converters:DTSelector x:Key="DTSelector" />
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,Auto,*">
        <!--  Header  -->
        <Label
            Grid.Row="0"
            StyleClass="TitleStyle"
            Text="Home" />

        <!--  Main Content  -->
        <VerticalStackLayout Grid.Row="1" Spacing="0">

            <!--  Current Balance Card  -->
            <Border StyleClass="BalanceCardStyle">
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontFamily="poppinbold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Current Balance"
                        TextColor="White" />
                    <Label
                        FontFamily="poppinbold"
                        FontSize="28"
                        HorizontalOptions="Center"
                        Text="$1,234.56"
                        TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <!--  Transactions Section  -->
            <Grid Margin="20,20,20,10" ColumnDefinitions="*,Auto">
                <Label
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    StyleClass="SectionTitleStyle"
                    Text="Transactions" />

                <!--  Filter Buttons  -->
                <HorizontalStackLayout
                    Grid.Column="1"
                    Spacing="8"
                    VerticalOptions="Center">
                    <Button StyleClass="ActiveFilterButtonStyle" Text="All" />
                    <Button StyleClass="FilterButtonStyle" Text="Income" />
                    <Button StyleClass="FilterButtonStyle" Text="Expenses" />
                </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>

        <!--  Transaction List  -->
        <Grid Grid.Row="2" RowDefinitions="*,Auto">
            <CollectionView
                Grid.Row="0"
                Margin="20,0,20,10"
                ItemTemplate="{StaticResource DTSelector}"
                ItemsSource="{Binding Transactions}"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1" />
                </CollectionView.ItemsLayout>
            </CollectionView>
            <HorizontalStackLayout
                Grid.Row="1"
                Margin="0,10,0,20"
                HorizontalOptions="Center"
                Spacing="10">
                <Button
                    Padding="0"
                    HeightRequest="30"
                    StyleClass="FilterButtonStyle"
                    Text="&lt;"
                    WidthRequest="40" />
                <Border
                    Margin="0"
                    Padding="12,8"
                    StyleClass="ActiveFilterButtonStyle">
                    <Label
                        FontFamily="poppinbold"
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="2"
                        TextColor="Black" />
                </Border>
                <Button
                    Padding="0"
                    HeightRequest="30"
                    StyleClass="FilterButtonStyle"
                    Text="&gt;"
                    WidthRequest="40" />
            </HorizontalStackLayout>
        </Grid>


    </Grid>
</ContentPage>